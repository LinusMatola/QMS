@model HubnyxQMS.ViewModels.QMSUserViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="pcoded-content">
    <div class="pcoded-inner-content">
        <!-- Main-body start -->
        <div class="main-body">
            <div class="page-wrapper">
                <!-- Page-header start -->
                <div class="page-header">
                    <div class="row align-items-end">
                        <div class="col-lg-4">
                            <div class="page-header-title">
                                <div class="d-inline">
                                    <h4>Add Staff</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Page-header end -->
                <!-- Page-body start -->
                <div class="page-body">
                    <form asp-action="Register" asp-controller="Account" enctype="multipart/form-data" method="Post">
                        <div class="auth-box card">
                            <div class="auth-box card">
                                <div class="card-block">
                                    <div class="row m-b-20">
                                        <div class="col-md-12">
                                            <h3 class="text-center">
                                                Nyati Sacco QMS | Register
                                            </h3>

                                        </div>
                                    </div>
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-group form-primary">
                                        <label for="exampleFormControlSelect1">Name</label>
                                        <input asp-for="FullName" class="form-control" required="" placeholder="Name">
                                        <span asp-validation-for="FullName" class="form-bar"></span>
                                    </div>
                                    <div class="form-group form-primary">
                                        <label for="exampleFormControlSelect1">Email</label>
                                        <input asp-for="Email" class="form-control" required="" placeholder="Email">
                                        <span asp-validation-for="Email" class="form-bar"></span>
                                    </div>
                                    <div class="row m-t-30">
                                        <div class="col-md-12">
                                            <button type="submit" class="btn btn-success btn-md btn-block waves-effect waves-light text-center m-b-20">Create</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                    </form>
                </div>
            </div>
        </div>
        <!-- Page-body end -->
    </div>
</div>

