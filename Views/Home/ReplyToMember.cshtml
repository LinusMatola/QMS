
@{
    ViewData["Title"] = "ReplyToMember";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="pcoded-content">
    <div class="pcoded-inner-content">
        <!-- Main-body start -->
        <div class="main-body">
            <div class="page-wrapper">
                <!-- Page-header start -->
                <div class="page-header">
                    <div class="row align-items-end">
                        <div class="col-lg-4">
                            <div class="page-header-title">
                                <div class="d-inline">
                                    <h4>Reply SMS To Ticket - @ViewBag.tictet</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Page-header end -->
                <!-- Page-body start -->
                <div class="page-body">
                    <form asp-action="SendTheMessage" enctype="multipart/form-data" method="Post">
                        <input type="hidden" name="id" value="@ViewBag.id" />
                        <div class="auth-box card">
                            <div class="auth-box card">
                                <div class="card-block">
                                    <div class="row m-b-20">
                                        <div class="col-md-12">
                                            <h3 class="text-center">
                                                Nyati Sacco QMS | Reply
                                            </h3>

                                        </div>
                                    </div>
                                    <div class="form-group form-primary">
                                        <label for="exampleFormControlSelect1">Phone</label>
                                        <input class="form-control" name="phone" disabled value="0723228883">
                                    </div>
                                    <div class="form-group form-primary">
                                        <label for="exampleFormControlSelect1">Message</label>
                                        <textarea rows="3" class="form-control" name="mymessage" required="" placeholder="Message"></textarea>
                                    </div>
                                    <div class="row m-t-30">
                                        <div class="col-md-12">
                                            <button type="submit" class="btn btn-success btn-md btn-block waves-effect waves-light text-center m-b-20">Send</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                    </form>
                </div>
            </div>
        </div>
        <!-- Page-body end -->
    </div>
</div>

